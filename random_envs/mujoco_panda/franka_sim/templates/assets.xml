<compiler angle="radian"/>
<option timestep="0.001" noslip_iterations="10" />
<size nuser_actuator="5"/>

{% set damping_mode=damping_mode | default("damping") %}

<asset>
    <mesh name="link0_col" file="collision/link0.stl"/>
    <mesh name="link1_col" file="collision/link1.stl"/>
    <mesh name="link2_col" file="collision/link2.stl"/>
    <mesh name="link3_col" file="collision/link3.stl"/>
    <mesh name="link4_col" file="collision/link4.stl"/>
    <mesh name="link5_col" file="collision/link5.stl"/>
    <mesh name="link6_col" file="collision/link6.stl"/>
    <mesh name="link7_col" file="collision/link7.stl"/>
    <mesh name="hand_col" file="collision/hand.stl"/>
    <mesh name="finger_col" file="collision/finger.stl" scale='1.75 1.0 1.75'/>
    <mesh name="link0_viz" file="visual/link0.stl"/>
    <mesh name="link1_viz" file="visual/link1.stl"/>
    <mesh name="link2_viz" file="visual/link2.stl"/>
    <mesh name="link3_viz" file="visual/link3.stl"/>
    <mesh name="link4_viz" file="visual/link4.stl"/>
    <mesh name="link5_viz" file="visual/link5.stl"/>
    <mesh name="link6_viz" file="visual/link6.stl"/>
    <mesh name="link7_viz" file="visual/link7.stl"/>
    <mesh name="hand_viz" file="visual/hand.stl"/>
    <mesh name="finger_viz" file="collision/finger.stl" scale='1.75 1.0 1.75'/>
    <mesh name="finger_lumi_plastic" file="3dprinted_finger.stl" />
    <mesh name="finger_original" file="original_finger.stl" />
</asset>

<default>
    <default class="panda">
        <joint pos="0 0 0" axis="0 0 1" limited="true"/>
        <position forcelimited="true" ctrllimited="true" user="1002 40 2001 -0.005 0.005"/>
        <default class="panda_viz">
            <geom contype="0" conaffinity="0" group="0" type="mesh"  mass="0"/>
        </default>

        <default class="panda_col">
            <geom contype="1" conaffinity="1" group="3" type="mesh" rgba="1 1 1 0"/>
        </default>
        <default class="panda_arm">
            {% if damping_mode == "armature" %}
            <joint damping="0" armature="1e3"/>
            {% elif damping_mode == "damping" %}
            <joint damping="100"/>
            {% else %}
            <!-- <joint damping="0" armature="0.001"/> -->
            <!-- <joint damping="0." armature="6e1"/> -->
            <joint damping="0." armature="1e3"/>
            {% endif %}
        </default>
        <default class="panda_forearm">
            {% if damping_mode == "armature" %}
            <joint damping="0" armature="1e3"/>
            {% elif damping_mode == "damping" %}
            <joint damping="10"/>
            {% else %}
            <!-- <joint damping="0" armature="0.001"/> -->
            <!-- <joint damping="0." armature="6e1"/> -->
            <joint damping="0." armature="1e3"/>
            {% endif %}
        </default>
        <default class="panda_finger">
        {% if actuator_type == "mocap" %}
            <joint damping="1e5" armature='5'/>
        {% else %}
            <joint damping="100" armature='5'/>
        {% endif %}
            <geom friction="1 0.5 0.0001" solref="0.01 1" solimp="0.8 0.9 0.001" margin="0.001" user="0" contype="1" conaffinity="0" condim="6" group="3" />
            <position user="1002 40 2001 -0.0001 0.0001"/>
        </default>
    </default>
</default>

<sensor>
    <jointpos name="fr_arm_jp1" joint="panda0_joint1"/>
    <jointpos name="fr_arm_jp2" joint="panda0_joint2"/>
    <jointpos name="fr_arm_jp3" joint="panda0_joint3"/>
    <jointpos name="fr_arm_jp4" joint="panda0_joint4"/>
    <jointpos name="fr_arm_jp5" joint="panda0_joint5"/>
    <jointpos name="fr_arm_jp6" joint="panda0_joint6"/>
    <jointpos name="fr_arm_jp7" joint="panda0_joint7"/>
    {% if hand_type == "default" %}
        <jointpos name="fr_fin_jp1" joint="panda0_finger_joint1"/>
        <jointpos name="fr_fin_jp2" joint="panda0_finger_joint2"/>
    {% endif %}
    <jointvel name="fr_arm_jv1" joint="panda0_joint1"/>
    <jointvel name="fr_arm_jv2" joint="panda0_joint2"/>
    <jointvel name="fr_arm_jv3" joint="panda0_joint3"/>
    <jointvel name="fr_arm_jv4" joint="panda0_joint4"/>
    <jointvel name="fr_arm_jv5" joint="panda0_joint5"/>
    <jointvel name="fr_arm_jv6" joint="panda0_joint6"/>
    <jointvel name="fr_arm_jv7" joint="panda0_joint7"/>
    {% if hand_type == "default" %}
        <jointvel name="fr_fin_jv1" joint="panda0_finger_joint1"/>
        <jointvel name="fr_fin_jv2" joint="panda0_finger_joint2"/>
    {% endif %}
</sensor>
