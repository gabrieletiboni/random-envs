{# Set limit_force to True if not passed #}
{% set limit_force=limit_force | default(True) %}
{% set limit_ctrl=limit_ctrl | default(True) %}
<actuator>
    <motor name="panda{{ robot_id }}_joint1" joint="panda{{ robot_id }}_joint1"
        {{ 'forcerange="-87 87" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-87 87" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.1750" -->
    <motor name="panda{{ robot_id }}_joint2" joint="panda{{ robot_id }}_joint2"
        {{ 'forcerange="-87 87" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-87 87" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.1750" -->
    <motor name="panda{{ robot_id }}_joint3" joint="panda{{ robot_id }}_joint3"
        {{ 'forcerange="-87 87" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-87 87" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.1750" -->
    <motor name="panda{{ robot_id }}_joint4" joint="panda{{ robot_id }}_joint4"
        {{ 'forcerange="-87 87" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-87 87" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.1750" -->
    <motor name="panda{{ robot_id }}_joint5" joint="panda{{ robot_id }}_joint5"
        {{ 'forcerange="-12 12" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-12 12" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.6100" -->
    <motor name="panda{{ robot_id }}_joint6" joint="panda{{ robot_id }}_joint6"
        {{ 'forcerange="-12 12" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-12 12" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.6100" -->
    <motor name="panda{{ robot_id }}_joint7" joint="panda{{ robot_id }}_joint7"
        {{ 'forcerange="-12 12" forcelimited="true"' if limit_force }}
        {{ 'ctrlrange="-12 12" ctrllimited="true"' if limit_ctrl }}
        /> <!-- velocity="2.9671" -->
    {% if hand_type == "default" %}
        <position name="panda{{ robot_id }}_finger_joint_r" joint="panda{{ robot_id }}_finger_joint1" class="panda_finger" kp="500" forcerange="-70 70" ctrlrange="0 0.04"/> <!-- velocity=".2" -->
        <position name="panda{{ robot_id }}_finger_joint_l" joint="panda{{ robot_id }}_finger_joint2" class="panda_finger" kp="500" forcerange="-70 70" ctrlrange="0 0.04"/> <!-- velocity=".2" -->
    {% endif %}
</actuator>
